    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wallpaper">


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_connect"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:paddingBottom="0dp"
                android:focusable="false"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:textSize="18sp"
                android:textStyle="italic"
                android:background="@drawable/mybutton"
                android:textColor="#FFFFFF"
                android:visibility="visible"
                android:textAllCaps="false"
                android:layout_weight="0"
                android:text="@string/main_connect"/>

            <Button
                android:id="@+id/btn_disconnect"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="@string/main_disconnect"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mybutton"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:textColor="#FFFFFF"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_weight="0"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_start_client"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="@string/main_startchat"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0"
                android:background="@drawable/mybutton"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:textStyle="italic"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textAllCaps="false"/>

        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.04"
                android:background="@color/facebook"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/label_Device_address"
                    android:id="@+id/textView"
                    android:layout_weight=".3"
                    android:textColor="#000000"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:background="@color/facebook"/>

                <TextView
                    android:id="@+id/device_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/facebook"
                    android:textColor="#ffffff"
                    android:layout_weight=".7"
                    android:gravity="center"
                    android:textStyle="bold"/>


            </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:background="@color/btnpress" />


    <TextView
            android:id="@+id/device_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@color/facebook"
            android:textColor="#ffffff"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/group_owner"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0" />
        <TextView
            android:id="@+id/group_ip"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/status_bar"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="0.1"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/btnpress"
            android:id="@+id/status_text"
            android:gravity="center"
            android:textStyle="italic">
        </TextView>
    </LinearLayout>


</LinearLayout>
